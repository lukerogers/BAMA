@model AngularList.Models.CreateList

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">New List</h3>
  </div>
<div class="modal-body">
    @using (Ajax.BeginForm("Create", "Home", new AjaxOptions{HttpMethod = "POST"}, new { id = "CreateList"}))
{
    @Html.LabelFor(m => m.Name, new {@class="control-label"})
    <div class="controls">
        @Html.EditorFor(m => m.Name)
    </div>
}
    
</div>
<div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button class="btn btn-primary" type="submit" form="CreateList">Save</button>
</div>